@model IEnumerable<QnA.Models.Questions>

@{
    ViewData["Title"] = "Questions";
}

<h2>Questions</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Header)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Body)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.user)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Header)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.user.ConfirmPassword)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.QuestionsId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.QuestionsId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.QuestionsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
